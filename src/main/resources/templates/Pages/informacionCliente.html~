<script src="https://cdn.jsdelivr.net/npm/vue@3.2.37/dist/vue.global.js"></script>
<script>
    const app = Vue.createApp({
        data() {
            return {
                isModalOpen: false,
                isTransferenciaExitosa: false,
                cuentaDestino: '',
                cuentaOrigen: '12345',
                descripcion: '',
                monto: '',
                fechaEnvio: '',
                cuentasDestino: [], // Lista dinámica de cuentas de destino
            }
        },
        mounted() {
            this.obtenerCuentasDestino(); // Cargar cuentas de destino desde una API o backend
            this.setFechaEnvio();
        },
        methods: {
            openModal() {
                this.isModalOpen = true;
            },
            closeModal() {
                this.isModalOpen = false;
            },
            obtenerCuentasDestino() {
                // Simulación de llamada a API
                setTimeout(() => {
                    this.cuentasDestino = ['00123456789', '00234567890', '00345678901'];
                }, 1000);
            },
            setFechaEnvio() {
                const fechaHoy = new Date();
                const anio = fechaHoy.getFullYear();
                const mes = (fechaHoy.getMonth() + 1).toString().padStart(2, '0');
                const dia = fechaHoy.getDate().toString().padStart(2, '0');
                this.fechaEnvio = `${anio}-${mes}-${dia}`;
            },
            procesarTransferencia() {
                console.log('Transferencia procesada:', {
                    cuentaDestino: this.cuentaDestino,
                    cuentaOrigen: this.cuentaOrigen,
                    descripcion: this.descripcion,
                    monto: this.monto,
                    fechaEnvio: this.fechaEnvio,
                });

                this.isModalOpen = false;
                this.isTransferenciaExitosa = true;
            },
            cerrarMensaje() {
                this.isTransferenciaExitosa = false;
            }
        }
    });

    app.mount('body');
</script>
</body>
