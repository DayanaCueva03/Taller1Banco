<script>
    function openModal() {
        document.getElementById("modal").classList.remove("hidden");
    }

    function closeModal() {
        document.getElementById("modal").classList.add("hidden");
    }

    function saveSelection() {creo que no
        const selectedAsesor = document.getElementById("asesorSelect").value;
        const descripcion = document.getElementById("descripcion").value;

        if (selectedAsesor && descripcion) {
            alert("Asesor seleccionado: " + selectedAsesor + "\nDescripción: " + descripcion);
            closeModal();
        } else {
            alert("Por favor, seleccione un asesor y escriba una descripción.");
        }
    }
</script>
